@{
    ViewData["Title"] = "Home";
}

<div class="hero-wrapper">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            Welcome to <span class="text-primary">SmartCart</span>
        </h1>

        <p class="lead text-muted mb-4">
            A modern mini e-commerce application built using ASP.NET Core MVC
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-area="Identity"       asp-page="/Account/Login"       class="btn btn-dark btn-lg px-4">
                🔐 Login
            </a>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary btn-lg px-4">
                Manage Categories
            </a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-success btn-lg px-4">
                Manage Products
            </a>
        </div>
    </div>
</div>


