@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-3">Our Products</h1>
            
            <!-- Search Bar -->
            <form method="get" asp-action="Index" class="mb-4">
                <input type="hidden" name="category" value="@Model.SelectedCategory" />
                <input type="hidden" name="page" value="1" />
                <div class="input-group">
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control" 
                           placeholder="Search products..." 
                           value="@Model.SearchTerm">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar - Category Filters -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("Index", new { searchTerm = Model.SearchTerm })" 
                           class="list-group-item list-group-item-action @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active" : "")">
                            All Categories
                        </a>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <a href="@Url.Action("Index", new { category = category.Name, searchTerm = Model.SearchTerm })" 
                                   class="list-group-item list-group-item-action @(Model.SelectedCategory == category.Name ? "active" : "")">
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-md-9">
            @if (Model.Products != null && Model.Products.Any())
            {
                <!-- Results Summary -->
                <div class="mb-3">
                    <p class="text-muted">
                        Showing page @Model.CurrentPage of @Model.TotalPages
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span> - Search results for "<strong>@Model.SearchTerm</strong>"</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedCategory))
                        {
                            <span> in <strong>@Model.SelectedCategory</strong></span>
                        }
                    </p>
                </div>

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col">
                            <div class="card h-100 product-card">
                                <!-- Product Image -->
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/no-image.png" : product.ImageUrl)" 
                                         class="card-img-top" 
                                         alt="@product.Name"
                                         style="height: 250px; object-fit: cover;">
                                </a>
                                
                                <div class="card-body d-flex flex-column">
                                    <!-- Product Name -->
                                    <h5 class="card-title">
                                        <a asp-action="Details" asp-route-id="@product.Id" 
                                           class="text-decoration-none text-dark">
                                            @product.Name
                                        </a>
                                    </h5>
                                    
                                    <!-- Category -->
                                    <p class="text-muted small mb-2">
                                        <i class="bi bi-tag"></i> @product.CategoryName
                                    </p>
                                    
                                    <!-- Price -->
                                    <div class="mb-2">
                                        <span class="fw-bold fs-5 text-primary">
                                            $@product.Price.ToString("N2")
                                        </span>
                                    </div>
                                    
                                    <!-- Stock Status -->
                                    <div class="mb-3">
                                        @if (product.InStock)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> In Stock
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Out of Stock
                                            </span>
                                        }
                                    </div>
                                    
                                    <!-- View Details Button -->
                                    <a asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary mt-auto">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Product pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Button -->
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { 
                                       page = Model.CurrentPage - 1, 
                                       searchTerm = Model.SearchTerm, 
                                       category = Model.SelectedCategory 
                                   })"
                                   aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            
                            @{
                                int startPage = Math.Max(1, Model.CurrentPage - 2);
                                int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            }

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" 
                                       href="@Url.Action("Index", new { 
                                           page = 1, 
                                           searchTerm = Model.SearchTerm, 
                                           category = Model.SelectedCategory 
                                       })">
                                        1
                                    </a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }
                            
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" 
                                       href="@Url.Action("Index", new { 
                                           page = i, 
                                           searchTerm = Model.SearchTerm, 
                                           category = Model.SelectedCategory 
                                       })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" 
                                       href="@Url.Action("Index", new { 
                                           page = Model.TotalPages, 
                                           searchTerm = Model.SearchTerm, 
                                           category = Model.SelectedCategory 
                                       })">
                                        @Model.TotalPages
                                    </a>
                                </li>
                            }
                            
                            <!-- Next Button -->
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { 
                                       page = Model.CurrentPage + 1, 
                                       searchTerm = Model.SearchTerm, 
                                       category = Model.SelectedCategory 
                                   })"
                                   aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No products found matching your criteria.
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedCategory))
                    {
                        <a asp-action="Index" class="alert-link ms-2">Clear filters</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .product-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .list-group-item {
            border-left: 3px solid transparent;
        }

        .list-group-item.active {
            border-left-color: #0d6efd;
        }
    </style>
}